<Page x:Class="KSHG.CHANGEFILM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KSHG"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CHANGEFILM">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="324*"/>
                <ColumnDefinition Width="239*"/>
                <ColumnDefinition Width="237*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="57*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="127*"/>
                <RowDefinition Height="79*"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="8,5,180,6" Foreground="#FFE01C1C" FontSize="15" Grid.Row="2">Название фильма :</TextBlock>
            <TextBlock Margin="10,2,178,10" Foreground="#FFE01C1C" FontSize="15" Grid.Row="3">Дата создания :</TextBlock>
            <ComboBox SelectedValuePath="IDgenre" DisplayMemberPath="NameofGenre" x:Name="COMBOBOXGENRE" materialDesign:HintAssist.Hint="Выбор жанра" Foreground="Aqua" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="164" Height="37" Grid.Row="5"/>
            <ComboBox SelectedValuePath="IDCountry" DisplayMemberPath="NameofCountry" x:Name="COMBOBOXCOUNTRY" materialDesign:HintAssist.Hint="Выбор страны" Foreground="Aqua" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="164" Height="38" Grid.Row="4"/>
            <Button Margin="9,6.787,0,2" Background="#FF4B08C1" Height="Auto" Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="25" BorderThickness="3" BorderBrush="White" Click="backmanuforcechange" FontSize="20" Grid.Column="2" Grid.Row="1">Меню</Button>
            <Button Margin="45,10,41,11" Background="#FF4B08C1" Height="Auto" Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="25" BorderThickness="3" BorderBrush="White" Click="change" FontSize="20" Grid.Row="7">Изменить</Button>
            <Button Margin="9,2,0,0" Background="#FF4B08C1" Height="Auto" Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="25" BorderThickness="3" BorderBrush="White" Click="addactor" FontSize="20" Grid.Row="3" Grid.Column="2">Добавить создателя</Button>
            <DataGrid x:Name="DataofRole" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="296" Margin="7,9,0,0" VerticalAlignment="Top" Foreground="#FF020402" Width="463" Background="#FFFFDF51" RenderTransformOrigin="0.5,0.5" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="4" Grid.Column="1">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FFFF683C"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.171"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.497"/>
                    </TransformGroup>
                </DataGrid.RenderTransform>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="  Роль в фильме" Binding="{Binding RoleofActor}"/>
                    <DataGridTextColumn Header="  Имя актера" Binding="{Binding AcName}"/>
                    <DataGridTextColumn Header="  Фамилия актера" Binding="{Binding AcLastName}"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBox x:Name="TextofF" HorizontalAlignment="Left" Margin="151,1,0,10" Grid.Row="2" TextWrapping="Wrap" Width="163" Foreground="#FFFF1111"/>
            <TextBox x:Name="TextofDATE" HorizontalAlignment="Left" Height="28" Margin="151,2,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Foreground="#FFFF1111"/>
        </Grid>
    </Grid>
</Page>
