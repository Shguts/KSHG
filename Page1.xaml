            <TextBox materialDesign:HintAssist.Hint="Логин" Foreground="Orange" Width="278" RenderTransformOrigin="0.597,0.616"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="381,169,140,253">
            <TextBox materialDesign:HintAssist.Hint="Пароль" Foreground="Orange" Width="278" RenderTransformOrigin="0.597,0.616" Height="28" VerticalAlignment="Top"/>
