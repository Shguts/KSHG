            </Border.RenderTransform>
        </Border>
        <StackPanel Orientation="Horizontal" Margin="70,106,451,313">
            <TextBox Margin=" 0" materialDesign:HintAssist.Hint="Имя" Foreground="Orange" Width="285" RenderTransformOrigin="0.597,0.616"/>
