<Page x:Class="KSHG.Spisokfilmov"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KSHG"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Spisokfilmov">

    <Grid>
        <DataGrid x:Name="SPISOKF" HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" VerticalAlignment="Top" Width="780" SelectionChanged="SPISOKF_SelectionChanged">
            <!--НЕНУЖНАЯ ФИГНЯ ПО СУТИ-->
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="Pink"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="   NameofFilm"/>
                <DataGridTextColumn Header="   IDCountry"/>
                <DataGridTextColumn Header="   AgeRestriction"/>
                <DataGridTextColumn Header="   rating"/>
                <DataGridTextColumn Header="   IDgenre"/>
                <DataGridTextColumn Header="   DateofCreate"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
