<Page x:Class="KSHG.Spisokfilmov"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KSHG"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Spisokfilmov">

    <Grid>
        <DataGrid x:Name="SPISOKF" HorizontalAlignment="Left" Height="430" AutoGenerateColumns="False" VerticalAlignment="Top" Width="581" Background="#FF83179B">
            <!--НЕНУЖНАЯ ФИГНЯ ПО СУТИ-->
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="Pink"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="   NameofFilm " Binding="{Binding NameofFilm}"/>
                <DataGridTextColumn Header="   IDCountry " Binding="{Binding IDCountry}"/>
                <DataGridTextColumn Header="   AgeRestriction " Binding="{Binding AgeRestriction}"/>
                <DataGridTextColumn Header="   rating " Binding="{Binding rating}"/>
                <DataGridTextColumn Header="   IDgenre " Binding="{Binding IDgenre}"/>
                <DataGridTextColumn Header="   DateofCreate " Binding="{Binding DateofCreate}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Перейти в меню" HorizontalAlignment="Left" Margin="615,36,0,0" VerticalAlignment="Top" Width="148" Height="40" Click="Button_Click"/>
        <Button Content="Добавить фильм" HorizontalAlignment="Left" Margin="615,124,0,0" VerticalAlignment="Top" Width="148" Height="40" Click="Button_Click"/>
    </Grid>
</Page>
